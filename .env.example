# Ollama
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=qwen2.5:7b-instruct

# LLM Provider (ollama|groq)
LLM_PROVIDER=ollama

# Groq (free tier API)
GROQ_API_KEY=
GROQ_MODEL=llama-3.1-8b-instant

# Amadeus (free tier API for live flights/hotels)
AMADEUS_CLIENT_ID=
AMADEUS_CLIENT_SECRET=
AMADEUS_BASE_URL=https://test.api.amadeus.com

# Embeddings (requires optional dependency: sentence-transformers)
EMBEDDING_MODEL=all-MiniLM-L6-v2

# Memory
CHROMA_PERSIST_DIR=./data/chroma_persistent
USER_ID=local_user

# Runtime / observability
RUNTIME_DIR=./runtime
LOG_LEVEL=INFO
MAX_GRAPH_ITERS=20
MAX_TOOL_RETRIES=3
EVAL_THRESHOLD=3.5

# Telemetry
TELEMETRY_MODE=minimal
TRACE_MAX_CHARS=2000

# Fault injection (deterministic)
SIMULATE_TOOL_TIMEOUT=false
SIMULATE_TOOL_ERROR=false
SIMULATE_BAD_RETRIEVAL=false
SIMULATE_LLM_ERROR=false
FAILURE_SEED=42
FAULT_PROBABILITY=1.0
FAULT_SLEEP_SECONDS=5
BAD_RETRIEVAL_MODE=empty
