# Ollama
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=qwen2.5:7b-instruct

# Embeddings (requires optional dependency: sentence-transformers)
EMBEDDING_MODEL=all-MiniLM-L6-v2

# Memory
CHROMA_PERSIST_DIR=./data/chroma_persistent
USER_ID=local_user

# Runtime / observability
RUNTIME_DIR=./runtime
LOG_LEVEL=INFO
MAX_GRAPH_ITERS=20
EVAL_THRESHOLD=3.5
